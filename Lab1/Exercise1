#include <iostream>
using namespace std;
int main()
{
	int x,y,z;

	cin >> x;
	cin >> y;
	cin >> z;
	
	int sum = x+y+z;
	int average = sum/3;
	int product = x*y*z;
	
	cout << sum << "\n";
	cout << average << "\n";
	cout << product << "\n";

	if(x > y & x > z){
	cout << x << "\n"; 
	}else if(y > x & y > z){
	cout << y << "\n";
	}else{
	cout << z << "\n"; 
	}

	if(x < y & x < z){
	cout << x << "\n"; 
	}else if(y < x & y < z){
	cout << y << "\n";
	}else{
	cout << z << "\n";
	}

}
